# Requirement
# https://github.com/Russell91/sshrc
echo "You are using sssrhc"

# Navigation
# ナビゲーション
#
alias ..  ='cd ..'
alias ... ='cd ../../'
alias ....='cd ../../../'

# Utility
# ユーティリティ
#
alias g='git'
alias h='history'

# Troubleshooting alias
# 障害対応でよくつかうコマンドエイリアス
#
function extendDu() {
  sudo du -sh $1 --exclude=*/proc* | sort -h -r | head -5
}
alias du=extendDu
