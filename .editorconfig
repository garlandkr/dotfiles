# EditorConfig is awesome: http://EditorConfig.org
root = true

[*]
charset = utf-8
indent_style = tab
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.rb]
# Based on https://github.com/bbatsov/ruby-style-guide
indent_style = space
indent_size = 2

[{*.css, *.scss, *.stylus, *.less}]
# Based on http://cssguidelin.es/
indent_style = space
indent_size = 4

[*.java]
# Based on https://google-styleguide.googlecode.com/svn/trunk/javaguide.html
indent_style = space
indent_size = 2

[{package.json,.travis.yml}]
indent_style = space
indent_size = 2
